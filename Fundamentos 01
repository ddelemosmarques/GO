----------------------------------------------------------------------

package main

import "fmt"

func main() {
	numerodebytes, erros := fmt.Println("Hello, 世界")
	fmt.Println(numerodebytes, erros)
}
 
// o resultado desse comando "numerodebytes, erros :="
// é o pedido para que mostre o numero de caracteres e os erros exitentes nesse comando

---------------------------------------------- 

package main

import "fmt"

func main() {
	_, erros := fmt.Println("Hello, 世界")
	fmt.Println(erros)
}

// ou

package main

import "fmt"

func main() {
	numerodebytes, _ := fmt.Println("Hello, 世界")
	fmt.Println(numerodebytes)
}

// usando "_"(underline) posso anular umaparte de um comando dentro de uma função que chama muitas informações 
// "numerodebytes, erros :=" veja que essa função comanda 2 informações ... quando eu quiser apeans uma é so substituir 
// a parte indesejada por "_"

